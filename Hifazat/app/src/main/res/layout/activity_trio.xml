<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shaheer.hifazat.TrioActivity">

    <Button
        android:text="Crime Reporting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crimesec"
        android:textSize="16sp"
        android:background="?attr/colorPrimaryDark"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/medemer"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Medical Emergency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/medemer"
        android:textSize="16sp"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:background="?attr/colorPrimaryDark"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/disalert"
        android:layout_alignParentStart="true" />

    <Button
android:text="Disaster Alert"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/disalert"
        android:textSize="16sp"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:background="?attr/colorPrimaryDark"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/btnmap"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Go to Map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnmap"
        android:textSize="16sp"
        android:background="?attr/colorPrimaryDark"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/btnnewsfeed"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Go to News Feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnnewsfeed"
        android:textSize="16sp"
        android:background="?attr/colorPrimaryDark"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:layout_marginBottom="77dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
